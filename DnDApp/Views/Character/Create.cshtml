@model DnDApp.Models.PartyMember



<h1>New Character</h1>
@using (Html.BeginForm("Create", "Character", FormMethod.Post, new { @class = "form-group" }))
{

    @Html.AntiForgeryToken()
    <div style="color: black;">
        @Html.Label("Name")
        @Html.TextBoxFor(model => model.Name)
    </div>

    <div style="color: black;">
        @Html.Label("Level")
        @Html.TextBoxFor(model => model.Level)
    </div>
    <div style="color: black;">
        @Html.Label("Headshot Url")
        @Html.TextBoxFor(model => model.Headshot)
    </div>
    <h3> Stats </h3>
    <div style="color: black;">
        @Html.Label("Strength")
        @Html.TextBoxFor(model => model.PlayerStat.Strength)
    </div>
    <div style="color: black;">
        @Html.Label("Dexterity")
        @Html.TextBoxFor(model => model.PlayerStat.Dexterity)
    </div>
    <div style="color: black;">
        @Html.Label("Constitution")
        @Html.TextBoxFor(model => model.PlayerStat.Constitution)
    </div>
    <div style="color: black;">
        @Html.Label("Intelligence")
        @Html.TextBoxFor(model => model.PlayerStat.Intelligence)
    </div>
    <div style="color: black;">
        @Html.Label("Wisdom")
        @Html.TextBoxFor(model => model.PlayerStat.Wisdom)
    </div>
    <div style="color: black;">
        @Html.Label("Charisma")
        @Html.TextBoxFor(model => model.PlayerStat.Charisma)
    </div>
    <input type="submit" value="Submit" />
}
