@model IEnumerable<DnDApp.Models.Episode>

@{
    ViewBag.Title = "ChaptersIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2>ChaptersIndex</h2>

<h2> @ViewBag.BookName</h2>
<table class="table">
@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.ChapterNumber)
        </td>
        <td>
            @Html.ActionLink(item.EpisodeName, "Details", new { id = item.Id} )
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
